{
  "name": "express-app-starter-pack",
  "private": true,
  "version": "1.0.0",
  "description": "A beginners friendly starter boilerplate for building multi pages or single page web apps using expressjs",
  "main": "server.js.js",
  "engines": {
    "node": "6.11.1",
    "npm": "3.10.10"
  },
  "scripts": {
    "build:dev": "webpack --env=dev --progress --profile --colors",
    "build:dist": "webpack --env=prod --progress --profile --colors",
    "dev-server": "NODE_ENV=development nodemon server.js",
    "prod-server": "NODE_ENV=production forever server.js",
    "dev": "npm-run-all -p -r build:dev dev-server",
    "start": "npm-run-all build:dist prod-server",
    "test": "mocha"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "template driven web app"
  ],
  "author": "AdelMahjoub",
  "license": "ISC",
  "dependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "clean-webpack-plugin": "^0.1.16",
    "compression": "^1.7.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "css-loader": "^0.28.4",
    "dotenv": "^4.0.0",
    "ejs": "^2.5.6",
    "express": "^4.15.3",
    "express-session": "^1.15.4",
    "file-loader": "^0.11.2",
    "forever": "^0.15.3",
    "helmet": "^3.8.0",
    "mongoose": "^4.11.4",
    "npm-run-all": "^4.0.2",
    "passport": "^0.3.2",
    "passport-google-oauth": "^1.0.0",
    "passport-local": "^1.0.0",
    "shortid": "^2.2.8",
    "style-loader": "^0.18.2",
    "validator": "^8.0.0",
    "webpack": "^3.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "cheerio": "^1.0.0-rc.2",
    "mocha": "^3.4.2",
    "nodemon": "^1.11.0",
    "supertest": "^3.0.0"
  }
}
